<Page x:Class="SideBar_Nav.Pages.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SideBar_Nav.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page4"
      
      >



    <Grid Background="#ffffff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition  Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" CornerRadius="20" BorderThickness="10" Background="#001373" Margin="0,-10,0,0"/>

        <Border Grid.RowSpan="2"/>
        <Viewbox Grid.Column="1" Stretch="Uniform" StretchDirection="Both"  MinWidth="300" MaxWidth="650" Margin="15" >
            <StackPanel Grid.Column="1"  Orientation="Vertical" VerticalAlignment="Center">
                <StackPanel VerticalAlignment="Top" Margin="0,-5,0,15" >
                    <TextBlock  Text="Sistema De Árbol Genealógico" FontFamily="ubuntu" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#ffffff" FontSize="20" FontWeight="Bold" Margin="0,0,0,0"/>
                    <TextBlock  Text="Ingrese el primer familiar para empezar..." FontFamily="ubuntu" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#525252" FontSize="10" FontWeight="Bold" Margin="0,0,0,0"/>

                </StackPanel>
                <StackPanel  Grid.Column="1" Orientation="Vertical" MaxWidth="250" MaxHeight="40" Margin="2">
                    <TextBlock HorizontalAlignment="Left" Text="Nombre" FontFamily="ubuntu" Foreground="#ffffff" FontSize="10" FontWeight="Bold" />
                    <TextBox Name="name" Foreground="#C4C4C4" Grid.Column="1" BorderThickness="2" MinWidth="200" MaxWidth="400" Text="Kevin" Margin="5,5,5,5" TextChanged="TextBox_TextChanged" />
                </StackPanel>

                <StackPanel  Grid.Column="1"  Orientation="Vertical"  MaxWidth="250" MaxHeight="40" Margin="2"  >
                    <TextBlock HorizontalAlignment="Left" Text="Edad" FontFamily="ubuntu" Foreground="#ffffff" FontSize="10" FontWeight="Bold"/>
                    <TextBox Name="age" Foreground="#C4C4C4" Grid.Column="1" BorderThickness="2" MinWidth="200" MaxWidth="400" Text="19" Margin="5,5,5,5" />
                </StackPanel>

                <StackPanel  Grid.Column="1"  Orientation="Vertical"  MaxWidth="250" MaxHeight="40"  Margin="2" >
                    <TextBlock HorizontalAlignment="Left" Text="Dirección (Coordenadas)" FontFamily="ubuntu" Foreground="#ffffff" FontSize="10" FontWeight="Bold"/>
                    <TextBox Name="location" Foreground="#C4C4C4" Grid.Column="1" BorderThickness="2" MinWidth="200" MaxWidth="400" Text="537.7, 122.2" Margin="5,5,5,5" />
                </StackPanel>

                <StackPanel  Grid.Column="1"  Orientation="Vertical"    MaxWidth="250" MaxHeight="50"  Margin="2">
                    <TextBlock HorizontalAlignment="Left" Text="Fecha de nacimiento" FontFamily="ubuntu" Foreground="#ffffff" FontSize="10" FontWeight="Bold"/>
                    <DatePicker Name="birthDay" Foreground="#C4C4C4" Grid.Column="1" BorderThickness="2" MinWidth="200" MaxWidth="400" Height="26" Text="28/10/2006" Margin="5,5,5,5" />
                </StackPanel>

                <StackPanel  Grid.Column="1"  Orientation="Vertical"  MaxWidth="250" MaxHeight="50"  Margin="2" >
                    <TextBlock HorizontalAlignment="Left" Text="Cédula" FontFamily="ubuntu" Foreground="#ffffff" FontSize="10" FontWeight="Bold"/>
                    <TextBox Name="id" Foreground="#C4C4C4" Grid.Column="1" BorderThickness="2" MinWidth="200" MaxWidth="400" Height="20" Text="119790562" />
                </StackPanel>
                <Border
 
                BorderBrush="Gray" BorderThickness="2" CornerRadius="5"
                Background="#FFEFEFEF" Padding="20"
                AllowDrop="True"
                DragEnter="DropArea_DragEnter"
                DragOver="DropArea_DragOver"
                Drop="DropArea_Drop"
                    Margin="10">
                    <TextBlock Text="Arrastra aquí una imagen" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
                <Button 
                Content="➤" FontSize="10" 
                MinWidth="100" 
                MaxWidth="200" 
                MinHeight="30" 
                MaxHeight="100"
                Click="NextPage" 
                Style="{StaticResource Btn1}"
                    Margin="10"
                    />






            </StackPanel>


        </Viewbox>
        <Image VerticalAlignment="Top" x:Name="MyImageControl" Width="200" Height="200" Margin="10"/>







    </Grid>

</Page>
